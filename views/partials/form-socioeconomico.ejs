<fieldset aria-labelledby="titulo-socioeconomico">
  <legend id="titulo-socioeconomico">2 - Dados Socioeconômicos</legend>

  <!-- Sexo -->
  <fieldset class="inline-label-input radio-group" aria-required="true">
    <legend>Sexo: <span class="asterisco">*</span></legend>
    <div>
      <label>
        <input type="radio" name="sexo" value="Masculino" required />
        Masculino
      </label>
      <label>
        <input type="radio" name="sexo" value="Feminino" required />
        Feminino
      </label>
    </div>
  </fieldset>

  <!-- Idade -->
  <div class="inline-label-input">
    <label for="idade">Idade: <span class="asterisco">*</span></label>
    <input
      type="number"
      id="idade"
      name="idade"
      inputmode="numeric"
      min="0"
      max="120"
      required
      aria-required="true"
      aria-describedby="erro-idade"
      placeholder="Digite sua idade em anos"
    />
    <span id="erro-idade" class="mensagem-erro" role="alert" hidden>
      Informe uma idade válida.
    </span>
  </div>

  <!-- Cor/Raça -->
  <div class="inline-label-input">
    <label for="cor-raca"
      >Cor/raça (como se autodeclara): <span class="asterisco">*</span></label
    >
    <input
      type="text"
      id="cor-raca"
      name="cor_raca"
      required
      aria-required="true"
      aria-describedby="erro-cor"
      placeholder="Ex: Pardo, Branco, Preto"
      autocomplete="off"
    />
    <span id="erro-cor" class="mensagem-erro" role="alert" hidden>
      Este campo é obrigatório.
    </span>
  </div>

  <!-- Data de nascimento -->
  <div class="inline-label-input">
    <label for="data-nascimento"
      >Data de nascimento: <span class="asterisco">*</span></label
    >
    <input
      type="date"
      id="data-nascimento"
      name="data_nascimento"
      required
      aria-required="true"
      aria-describedby="erro-nascimento"
    />
    <span id="erro-nascimento" class="mensagem-erro" role="alert" hidden>
      Informe sua data de nascimento.
    </span>
  </div>

  <!-- Profissão -->
  <div class="inline-label-input">
    <label for="profissao">Profissão: <span class="asterisco">*</span></label>
    <input
      type="text"
      id="profissao"
      name="profissao"
      required
      aria-required="true"
      aria-describedby="erro-profissao"
      placeholder="Ex: Professora, Pedreiro, Aposentado"
      autocomplete="off"
    />
    <span id="erro-profissao" class="mensagem-erro" role="alert" hidden>
      Informe sua profissão.
    </span>
  </div>

  <!-- Situação -->
  <fieldset class="inline-label-input radio-group" aria-required="true">
    <legend>Situação profissional: <span class="asterisco">*</span></legend>
    <div>
      <label
        ><input type="radio" name="situacao" value="Ativo" required />
        Ativo</label
      >
      <label
        ><input type="radio" name="situacao" value="Aposentado" required />
        Aposentado</label
      >
      <label
        ><input type="radio" name="situacao" value="Desempregado" required />
        Desempregado</label
      >
    </div>
  </fieldset>

  <!-- Empresa/Órgão -->
  <div class="inline-label-input">
    <label for="empresa-orgao">Empresa/Órgão Público:</label>
    <input
      type="text"
      id="empresa-orgao"
      name="empresa_orgao"
      placeholder="Nome da empresa ou órgão público"
      autocomplete="organization"
    />
  </div>

  <!-- Estado civil -->
  <fieldset class="inline-label-input radio-group" aria-required="true">
    <legend>Estado civil: <span class="asterisco">*</span></legend>
    <div class="estado-civil-group">
      <label
        ><input type="radio" name="estado_civil" value="Casado" required />
        Casado</label
      >
      <label
        ><input type="radio" name="estado_civil" value="Solteiro" required />
        Solteiro</label
      >
      <label
        ><input type="radio" name="estado_civil" value="Divorciado" required />
        Divorciado</label
      >
      <label
        ><input type="radio" name="estado_civil" value="Viuvo" required />
        Viúvo</label
      >
      <label
        ><input type="radio" name="estado_civil" value="Convivente" required />
        Convivente</label
      >
      <label
        ><input type="radio" name="estado_civil" value="Outro" required />
        Outro</label
      >
    </div>
  </fieldset>

  <!-- Número de dependentes -->
  <div class="inline-label-input">
    <label for="numero-dependentes"
      >Número de dependentes (incluindo você):
      <span class="asterisco">*</span></label
    >
    <input
      type="number"
      id="numero-dependentes"
      name="numero_dependentes"
      inputmode="numeric"
      min="0"
      max="20"
      required
      aria-required="true"
      aria-describedby="erro-dependentes"
    />
    <span id="erro-dependentes" class="mensagem-erro" role="alert" hidden>
      Informe um número entre 0 e 20.
    </span>
  </div>

  <!-- Renda bruta -->
  <div class="inline-label-input">
    <label for="renda-bruta"
      >Renda Bruta individual mensal: <span class="asterisco">*</span></label
    >
    <input
      type="text"
      id="renda-bruta"
      name="renda_bruta"
      inputmode="decimal"
      required
      aria-required="true"
      aria-describedby="erro-renda-bruta"
      placeholder="R$ 0,00"
    />
    <span id="erro-renda-bruta" class="mensagem-erro" role="alert" hidden>
      Informe sua renda bruta.
    </span>
  </div>

  <!-- Renda líquida -->
  <div class="inline-label-input">
    <label for="renda-liquida"
      >Renda Líquida mensal (sem empréstimos):
      <span class="asterisco">*</span></label
    >
    <input
      type="text"
      id="renda-liquida"
      name="renda_liquida"
      inputmode="decimal"
      required
      aria-required="true"
      aria-describedby="erro-renda-liquida"
      placeholder="R$ 0,00"
    />
    <span id="erro-renda-liquida" class="mensagem-erro" role="alert" hidden>
      Informe sua renda líquida.
    </span>
  </div>

  <!-- Renda familiar -->
  <div class="inline-label-input">
    <label for="renda-familiar"
      >Renda Familiar mensal: <span class="asterisco">*</span></label
    >
    <input
      type="text"
      id="renda-familiar"
      name="renda_familiar"
      inputmode="decimal"
      required
      aria-required="true"
      aria-describedby="erro-renda-familiar"
      placeholder="R$ 0,00"
    />
    <span id="erro-renda-familiar" class="mensagem-erro" role="alert" hidden>
      Informe a renda total da família.
    </span>
  </div>
</fieldset>
