<fieldset aria-labelledby="titulo-identificacao">
  <legend id="titulo-identificacao">1 - Identificação Completa</legend>

  <!-- Nome -->
  <div class="inline-label-input">
    <label for="nome-completo">
      Nome completo: <span class="asterisco">*</span>
    </label>
    <input
      type="text"
      id="nome-completo"
      name="nome"
      required
      aria-required="true"
      aria-describedby="erro-nome"
      placeholder="Digite seu nome completo"
      autocomplete="name"
    />
    <span id="erro-nome" class="mensagem-erro" role="alert" hidden>
      Informe seu nome completo.
    </span>
  </div>

  <!-- CPF -->
  <div class="inline-label-input">
    <label for="cpf">CPF: <span class="asterisco">*</span></label>
    <input
      type="text"
      id="cpf"
      name="cpf"
      required
      aria-required="true"
      aria-describedby="erro-cpf"
      placeholder="000.000.000-00"
      inputmode="numeric"
      maxlength="14"
      autocomplete="off"
    />
    <span id="erro-cpf" class="mensagem-erro" role="alert" hidden>
      Informe um CPF válido.
    </span>
  </div>

  <!-- Endereço -->
  <div class="inline-label-input">
    <label for="endereco">Endereço: <span class="asterisco">*</span></label>
    <input
      type="text"
      id="endereco"
      name="endereco"
      required
      aria-required="true"
      aria-describedby="erro-endereco"
      placeholder="Rua, número, bairro, cidade"
      autocomplete="street-address"
    />
    <span id="erro-endereco" class="mensagem-erro" role="alert" hidden>
      Informe seu endereço completo.
    </span>
  </div>

  <!-- Telefone -->
  <div class="grupo-telefone" aria-labelledby="titulo-telefone">
    <legend id="titulo-telefone">
      Telefone: <span class="asterisco">*</span>
    </legend>
    <div class="grupo-telefone-inputs">
      <input
        type="text"
        id="telefone_ddd"
        name="telefone_ddd"
        maxlength="3"
        required
        aria-required="true"
        aria-describedby="erro-telefone"
        placeholder="DDD"
        inputmode="numeric"
        autocomplete="tel-area-code"
      />
      <input
        type="text"
        id="telefone_numero"
        name="telefone_numero"
        maxlength="15"
        required
        aria-required="true"
        aria-describedby="erro-telefone"
        placeholder="99999-9999"
        inputmode="tel"
        autocomplete="tel-local"
      />
    </div>
    <span id="erro-telefone" class="mensagem-erro" role="alert" hidden>
      Informe um telefone válido com DDD.
    </span>
  </div>

  <!-- Email -->
  <div class="inline-label-input">
    <label for="email">Email: <span class="asterisco">*</span></label>
    <input
      type="email"
      id="email"
      name="email"
      required
      aria-required="true"
      aria-describedby="erro-email"
      placeholder="seuemail@exemplo.com"
      autocomplete="email"
    />
    <span id="erro-email" class="mensagem-erro" role="alert" hidden>
      Informe um endereço de email válido.
    </span>
  </div>
</fieldset>
