<fieldset>
  <legend>1 - Identificação Completa</legend>

  <div class="inline-label-input">
    <label for="nome-completo">
      Nome completo: <span class="asterisco">*</span>
    </label>
    <input
      type="text"
      id="nome-completo"
      name="nome"
      required
      placeholder="Digite seu nome completo"
    />
  </div>

  <div class="inline-label-input">
    <label for="cpf"> CPF: <span class="asterisco">*</span> </label>
    <input
      type="text"
      id="cpf"
      name="cpf"
      required
      placeholder="000.000.000-00"
      maxlength="14"
    />
  </div>

  <div class="inline-label-input">
    <label for="endereco"> Endereço: <span class="asterisco">*</span> </label>
    <input
      type="text"
      id="endereco"
      name="endereco"
      required
      placeholder="Rua, número, bairro, cidade"
    />
  </div>

  <div class="grupo-telefone">
    <label for="telefone_numero">
      Telefone: <span class="asterisco">*</span>
    </label>
    <div class="grupo-telefone-inputs">
      <input
        type="text"
        id="telefone_ddd"
        name="telefone_ddd"
        maxlength="3"
        required
        placeholder="DDD"
      />
      <input
        type="text"
        id="telefone_numero"
        name="telefone_numero"
        maxlength="15"
        required
        placeholder="99999-9999"
      />
    </div>
  </div>

  <div class="inline-label-input">
    <label for="email"> Email: <span class="asterisco">*</span> </label>
    <input
      type="email"
      id="email"
      name="email"
      required
      placeholder="seuemail@exemplo.com"
    />
  </div>
</fieldset>
