<fieldset aria-labelledby="titulo-endividamento">
  <legend id="titulo-endividamento">
    4 - Informações sobre o Superendividamento
  </legend>

  <!-- Casa própria -->
  <fieldset class="inline-label-input radio-group" aria-required="true">
    <legend>Possui casa própria? <span class="asterisco">*</span></legend>
    <div>
      <label>
        <input type="radio" name="casa_propria" value="Sim" required />
        Sim
      </label>
      <label>
        <input type="radio" name="casa_propria" value="Não" required />
        Não
      </label>
    </div>
  </fieldset>

  <!-- Montante da dívida -->
  <div class="inline-label-input">
    <label for="divida_total">
      Montante total da dívida: <span class="asterisco">*</span>
    </label>
    <input
      type="text"
      id="divida_total"
      name="divida_total"
      inputmode="decimal"
      required
      aria-required="true"
      aria-describedby="erro-divida"
      placeholder="R$ 0,00"
    />
    <span id="erro-divida" class="mensagem-erro" role="alert" hidden>
      Informe o valor total da dívida.
    </span>
  </div>

  <!-- Comprometimento mensal -->
  <div class="inline-label-input">
    <label for="comprometimento_mensal">
      Comprometimento mensal com dívidas: <span class="asterisco">*</span>
    </label>
    <input
      type="text"
      id="comprometimento_mensal"
      name="comprometimento_mensal"
      inputmode="decimal"
      required
      aria-required="true"
      aria-describedby="erro-comprometimento"
      placeholder="R$ 0,00"
    />
    <span id="erro-comprometimento" class="mensagem-erro" role="alert" hidden>
      Informe o valor mensal comprometido.
    </span>
  </div>

  <!-- Número de credores e dívidas -->
  <div class="inline-duplo">
    <div class="inline-label-input">
      <label for="numero_credores">
        Número de credores (empresas): <span class="asterisco">*</span>
      </label>
      <input
        type="number"
        id="numero_credores"
        name="numero_credores"
        inputmode="numeric"
        min="0"
        required
        aria-required="true"
        aria-describedby="erro-credores"
      />
      <span id="erro-credores" class="mensagem-erro" role="alert" hidden>
        Informe o número de credores.
      </span>
    </div>

    <div class="inline-label-input">
      <label for="numero_dividas">
        Número de dívidas: <span class="asterisco">*</span>
      </label>
      <input
        type="number"
        id="numero_dividas"
        name="numero_dividas"
        inputmode="numeric"
        min="0"
        required
        aria-required="true"
        aria-describedby="erro-dividas"
      />
      <span id="erro-dividas" class="mensagem-erro" role="alert" hidden>
        Informe o número total de dívidas.
      </span>
    </div>
  </div>

  <!-- Causas das dívidas -->
  <fieldset class="inline-label-input" aria-labelledby="titulo-causas">
    <legend id="titulo-causas">
      Causas das dívidas (marque as aplicáveis):
    </legend>
    <div class="radio-group">
      <label>
        <input
          type="checkbox"
          name="causas[]"
          value="Gastou mais do que ganha"
        />
        Gastou mais do que ganha
      </label>
      <label>
        <input type="checkbox" name="causas[]" value="Desemprego" />
        Desemprego
      </label>
      <label>
        <input type="checkbox" name="causas[]" value="Divórcio/separação" />
        Divórcio/separação
      </label>
      <label>
        <input
          type="checkbox"
          name="causas[]"
          value="Doença pessoal ou familiar"
        />
        Doença pessoal ou familiar
      </label>
      <label>
        <input type="checkbox" name="causas[]" value="Redução de renda" />
        Redução de renda
      </label>
      <label>
        <input type="checkbox" name="causas[]" value="Morte do provedor" />
        Morte do provedor
      </label>
      <label>
        <input type="checkbox" name="causas[]" value="Ajudar amigos/parentes" />
        Ajudar amigos/parentes
      </label>
    </div>
  </fieldset>

  <!-- Cadastro de inadimplente -->
  <fieldset class="inline-label-input radio-group" aria-required="true">
    <legend>
      Está registrado em cadastros de inadimplentes?
      <span class="asterisco">*</span>
    </legend>
    <div>
      <label>
        <input type="radio" name="cadastro_inadimplente" value="Sim" required />
        Sim
      </label>
      <label>
        <input type="radio" name="cadastro_inadimplente" value="Não" required />
        Não
      </label>
    </div>
  </fieldset>

  <!-- Valor possível de pagar -->
  <div class="inline-label-input">
    <label for="valor_possivel_pagar">
      Valor possível de pagar mensalmente (sem prejuízo à subsistência):
      <span class="asterisco">*</span>
    </label>
    <input
      type="text"
      id="valor_possivel_pagar"
      name="valor_possivel_pagar"
      inputmode="decimal"
      required
      aria-required="true"
      aria-describedby="erro-pagamento"
      placeholder="R$ 0,00"
    />
    <span id="erro-pagamento" class="mensagem-erro" role="alert" hidden>
      Informe o valor que pode pagar por mês.
    </span>
  </div>
</fieldset>
