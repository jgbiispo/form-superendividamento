<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Formulário NAS - PROCON/ES</title>
    <script defer src="/script.js"></script>
    <script defer src="/preenchimento-teste.js"></script>
    <script defer src="/form-wizard.js"></script>
    <script defer src="/form-storage.js"></script>
    <link rel="stylesheet" href="css/base.css" />
    <link rel="stylesheet" href="css/layout.css" />
    <link rel="stylesheet" href="css/form.css" />
    <link rel="stylesheet" href="css/buttons.css" />
    <link rel="stylesheet" href="css/credor.css" />
    <link rel="stylesheet" href="css/utils.css" />
    <link rel="stylesheet" href="css/responsive.css" />
    <link
      href="https://procon.es.gov.br/Media/procon/favicon/LOGOMARCA_Procon_transp.png"
      rel="shortcut icon"
      type="image/x-icon"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Formulário para mapeamento de superendividados - PROCON/ES. Preencha os dados necessários para iniciar o processo de negociação."
    />
    <meta
      name="keywords"
      content="PROCON, ES, superendividamento, formulário, negociação, dívidas"
    />
  </head>
  <body>
    <%- include('partials/header') %>

    <main>
      <!-- Barra de progresso e contagem das etapas -->
      <div
        class="progress-bar"
        role="progressbar"
        aria-label="Barra de progresso do formulário"
        aria-valuemin="1"
        aria-valuemax="5"
        aria-valuenow="1"
      >
        <span id="contador-etapas" aria-live="polite" aria-atomic="true">
          Etapa 1 de 5
        </span>
      </div>

      <!-- Formulário dividido em etapas -->
      <form action="/send" method="POST" id="formulario" role="form" novalidate>
        <!-- Etapa 1 -->
        <section
          class="form-step ativo"
          aria-hidden="false"
          aria-labelledby="etapa1-titulo"
          tabindex="-1"
        >
          <h2 id="etapa1-titulo" class="visually-hidden">
            Etapa 1 - Identificação
          </h2>
          <%- include('partials/form-identificacao') %>
        </section>

        <!-- Etapa 2 -->
        <section
          class="form-step"
          aria-hidden="true"
          aria-labelledby="etapa2-titulo"
          tabindex="-1"
        >
          <h2 id="etapa2-titulo" class="visually-hidden">
            Etapa 2 - Socioeconômico
          </h2>
          <%- include('partials/form-socioeconomico') %>
        </section>

        <!-- Etapa 3 -->
        <section
          class="form-step"
          aria-hidden="true"
          aria-labelledby="etapa3-titulo"
          tabindex="-1"
        >
          <h2 id="etapa3-titulo" class="visually-hidden">Etapa 3 - Despesas</h2>
          <%- include('partials/form-despesas') %>
        </section>

        <!-- Etapa 4 -->
        <section
          class="form-step"
          aria-hidden="true"
          aria-labelledby="etapa4-titulo"
          tabindex="-1"
        >
          <h2 id="etapa4-titulo" class="visually-hidden">
            Etapa 4 - Endividamento
          </h2>
          <%- include('partials/form-endividamento') %>
        </section>

        <!-- Etapa 5 -->
        <section
          class="form-step"
          aria-hidden="true"
          aria-labelledby="etapa5-titulo"
          tabindex="-1"
        >
          <h2 id="etapa5-titulo" class="visually-hidden">Etapa 5 - Credores</h2>
          <%- include('partials/form-credores') %>
        </section>

        <!-- Botões de navegação -->
        <nav class="botoes-navegacao" aria-label="Navegação do formulário">
          <button
            type="button"
            id="btn-voltar"
            class="button-voltar"
            disabled
            aria-disabled="true"
            aria-label="Voltar para etapa anterior"
          >
            ← Voltar
          </button>
          <button
            type="button"
            id="btn-proximo"
            aria-label="Avançar para próxima etapa"
          >
            Próximo →
          </button>
          <button
            type="submit"
            id="btn-enviar"
            style="display: none"
            aria-label="Enviar o formulário completo"
          >
            Enviar Formulário
          </button>
        </nav>
      </form>

      <!-- Botão voltar ao topo -->
      <button
        id="voltar-topo"
        title="Voltar ao topo"
        aria-label="Voltar ao topo"
      >
        ↑
      </button>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
